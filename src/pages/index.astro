---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<div class="container">
		<h2>Hello francis</h2>

	<div class="about">
		<h3 class="about-h1">This my about</h3>
		<a class="about-a" href="/about">About</a>
	</div>
	</div>
</Layout>

<style>

	.about {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	
	}
	.about-h1 {
		font-size: 2rem;
	}
	.about-a {
		font-size: 1.5rem;
		text-decoration: none;
		color: #fff;
		background-color: #000;
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;	
		

	}

	.about-a:hover {
		border: 1px solid #fff;
		box-shadow: 0 0 10px #ff0303;
		 animation: slideup 1s ease-in-out;

	}

 @keyframes slideup {
  0% {
	transform: translateY(0);
  }
  50% {
	transform: translateY(-10px);
  }
  100% {
	transform: translateY(0);
  }
}
	

	@media (max-width: 600px) {
		main {
			font-size: 18px;
		}
		h1 {
			font-size: 3rem;
		}
	}

	h1{
		color: #fff;
	}

	.container {
		display: flex;
		flex-direction: column;
		margin:  10rem;
		
		align-items: center;
		justify-content: center;
	}
</style>
